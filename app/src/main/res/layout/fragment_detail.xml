<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/image_pesan"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/fruit_salad__1_"
        app:layout_constraintDimensionRatio="19:9"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/keterangan_pesanan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/image_pesan"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:id="@+id/jenis_pesanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salad Buah"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/keterangan_pesanan"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/harga_pesanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp 18.000"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/keterangan_pesanan"
            app:layout_constraintTop_toTopOf="@id/keterangan_pesanan"/>
        <TextView
            android:id="@+id/desk_pesanan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Varian dari buah-buahan segar yang di sajikan dengan yogurt dingin"
            app:layout_constraintTop_toBottomOf="@id/jenis_pesanan"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/Lokasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintTop_toBottomOf="@id/keterangan_pesanan">
        <ImageView
            android:id="@+id/btnLokasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/shop_location"
            app:layout_constraintTop_toTopOf="@id/Lokasi"
            app:layout_constraintStart_toStartOf="@id/Lokasi"/>
        <TextView
            android:id="@+id/jdlLokasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lokasi"
            android:layout_marginStart="8dp"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/Lokasi"
            app:layout_constraintStart_toEndOf="@id/btnLokasi"/>
        <TextView
            android:id="@+id/ketLokasi"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jl.BSD Green Office Park Jl. BSD Grand Boulevard, Sampora, BSD, Kabupaten Tanggerang, Banten 15345"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/jdlLokasi"
            app:layout_constraintStart_toEndOf="@id/btnLokasi"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pesan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <Button
            android:id="@+id/pesanMkn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tambah ke Keranjang - Rp 18.000"
            app:layout_constraintBottom_toBottomOf="@id/pesan"
            app:layout_constraintStart_toStartOf="@id/pesan"
            app:layout_constraintEnd_toEndOf="@id/pesan"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/jmlPesanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            app:layout_constraintBottom_toTopOf="@id/pesanMkn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <ImageView
                android:id="@+id/krgpesanan"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/frame_39"
                android:layout_marginLeft="3dp"
                app:layout_constraintBottom_toBottomOf="@id/jmlPesanan"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/jumlahpsn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="20sp"
                android:layout_marginLeft="3dp"
                app:layout_constraintStart_toEndOf="@id/krgpesanan"
                app:layout_constraintTop_toTopOf="parent"/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/frame_40"
                android:layout_marginLeft="3dp"
                app:layout_constraintEnd_toEndOf="@id/jmlPesanan"
                app:layout_constraintStart_toEndOf="@id/jumlahpsn"
                app:layout_constraintBottom_toBottomOf="@id/jmlPesanan"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>